<!DOCTYPE html>

<html>
<head>
    @RenderSection("HeadContent", false)
    <script src="@Url.Content("../../Scripts/jquery-1.4.1.js")" type="text/javascript"></script>
    <link href="@Url.Content("../../Content/Site.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title J&G Wedding</title>
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-39114326-1']);
        _gaq.push(['_trackPageview']);
        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>
    <div id="page">
        <div id="header">
            @{
                var url = Request.Url.ToString();
                if (!url.Contains("lang="))
                {
                    url += "?lang=en";
                }                     
            }
            <div id="language">
                <a href="@url.Replace("lang=es", "lang=en")">English</a> / <a href="@url.Replace("lang=en", "lang=es")">Español</a>
            </div>
            <div class="title">
                <div id="titleback">
                    <span class="large">G&J</span> Wedding
                </div>
                <span class="large">G&J</span> Wedding
            </div>
        </div>
        <div id="categories">
            @{ Html.RenderAction("Menu", "Nav"); }
        </div>
        <div id="content">
            @RenderBody()
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".page-title").text($(".selected").text());
            var ph = $(window).height();
            if (ph < 1000) {
                ph += 1000;
            }
            $('#page').css("min-height", ph);
        });
    </script>

</body>
</html>
